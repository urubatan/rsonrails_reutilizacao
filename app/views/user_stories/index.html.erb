<h1>Listing user_stories</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Title</th>
    <th>As a</th>
    <th>I want to</th>
    <th>So that</th>
    <th>Description</th>
  </tr>

<% @user_stories.each do |user_story| %>
  <tr>
    <td><%=h user_story.project %></td>
    <td><%=h user_story.title %></td>
    <td><%=h user_story.as_a %></td>
    <td><%=h user_story.i_want_to %></td>
    <td><%=h user_story.so_that %></td>
    <td><%=h user_story.description %></td>
    <td><%= link_to 'Show', user_story %></td>
    <td><%= link_to 'Edit', edit_user_story_path(user_story) %></td>
    <td><%= link_to 'Destroy', user_story, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user_story', new_user_story_path %>