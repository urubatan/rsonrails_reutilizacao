    <%= f.select :task_type_id, [], :include_blank => true %>
  </p>
  <p>
    <%= f.label :user_id, "Usuario" %><br />
    <%= f.select :user_id, @users.collect{|usr| [usr.name, usr.id] }, :include_blank => true %>
  </p>
  <p>
    <%= f.submit "Buscar" %>
  </p>
<% end %>

