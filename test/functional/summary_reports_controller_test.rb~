require 'test_helper'

class SummaryReportsControllerTest < ActionController::TestCase
  def test_should_get_index
    get :index
    assert_response :success
    assert_not_nil assigns(:summary_reports)
  end

  def test_should_get_new
    get :new
    assert_response :success
  end

  def test_should_create_summary_report
    assert_difference('SummaryReport.count') do
      post :create, :summary_report => { }
    end

    assert_redirected_to summary_report_path(assigns(:summary_report))
  end

  def test_should_show_summary_report
    get :show, :id => summary_reports(:one).id
    assert_response :success
  end

  def test_should_get_edit
    get :edit, :id => summary_reports(:one).id
    assert_response :success
  end

  def test_should_update_summary_report
    put :update, :id => summary_reports(:one).id, :summary_report => { }
    assert_redirected_to summary_report_path(assigns(:summary_report))
  end

  def test_should_destroy_summary_report
    assert_difference('SummaryReport.count', -1) do
      delete :destroy, :id => summary_reports(:one).id
    end

    assert_redirected_to summary_reports_path
  end
end
